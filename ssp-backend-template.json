{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "ssp-backend"
    },
    "objects": [
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "ssp-backend",
                "labels": {
                    "app": "ssp-backend"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600,
                        "maxUnavailable": "25%",
                        "maxSurge": "25%"
                    }
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "ssp-backend"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "ssp-backend:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "test": false,
                "selector": {
                    "app": "ssp-backend",
                    "deploymentconfig": "ssp-backend"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "ssp-backend",
                            "deploymentconfig": "ssp-backend"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "ssp-backend",
                                "image": "ssp-backend",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "OPENSHIFT_API",
                                        "value": "${OPENSHIFT_API}"
                                    },
                                    {
                                        "name": "OPENSHIFT_TOKEN",
                                        "value": "${OPENSHIFT_TOKEN}"
                                    },
                                    {
                                        "name": "MAX_QUOTA_CPU",
                                        "value": "${MAX_QUOTA_CPU}"
                                    },
                                    {
                                        "name": "MAX_QUOTA_MEMORY",
                                        "value": "${MAX_QUOTA_MEMORY}"
                                    },
                                    {
                                        "name": "LDAP_URL",
                                        "value": "${LDAP_URL}"
                                    },
                                    {
                                        "name": "LDAP_BIND_DN",
                                        "value": "${LDAP_BIND_DN}"
                                    },
                                    {
                                        "name": "LDAP_BIND_CRED",
                                        "value": "${LDAP_BIND_CRED}"
                                    },
                                    {
                                        "name": "LDAP_FILTER",
                                        "value": "${LDAP_FILTER}"
                                    },
                                    {
                                        "name": "SESSION_KEY",
                                        "value": "${SESSION_KEY}"
                                    },
                                    {
                                        "name": "LDAP_SEARCH_BASE",
                                        "value": "${LDAP_SEARCH_BASE}"
                                    },
                                    {
                                        "name": "GIN_MODE",
                                        "value": "${GIN_MODE}"
                                    },
                                    {
                                        "name": "MAX_VOLUME_GB",
                                        "value": "${MAX_VOLUME_GB}"
                                    },
                                    {
                                        "name": "GLUSTER_API_URL",
                                        "value": "${GLUSTER_API_URL}"
                                    },
                                    {
                                        "name": "GLUSTER_SECRET",
                                        "value": "${GLUSTER_SECRET}"
                                    },
                                    {
                                        "name": "GLUSTER_IPS",
                                        "value": "${GLUSTER_IPS}"
                                    },
                                    {
                                        "name": "AWS_S3_BUCKET_PREFIX",
                                        "value": "${AWS_S3_BUCKET_PREFIX}"
                                    },
                                    {
                                        "name": "AWS_NONPROD_SECRET_ACCESS_KEY",
                                        "value": "${AWS_NONPROD_SECRET_ACCESS_KEY}"
                                    },
                                    {
                                        "name": "AWS_REGION",
                                        "value": "${AWS_REGION}"
                                    },
                                    {
                                        "name": "AWS_PROD_ACCESS_KEY_ID",
                                        "value": "${AWS_PROD_ACCESS_KEY_ID}"
                                    },
                                    {
                                        "name": "AWS_PROD_SECRET_ACCESS_KEY",
                                        "value": "${AWS_PROD_SECRET_ACCESS_KEY}"
                                    },
                                    {
                                        "name": "AWS_NONPROD_ACCESS_KEY_ID",
                                        "value": "${AWS_NONPROD_ACCESS_KEY_ID}"
                                    },
                                    {
                                        "name": "SEMATEXT_API_TOKEN",
                                        "value": "${SEMATEXT_API_TOKEN}"
                                    },
                                    {
                                        "name": "SEMATEXT_BASE_URL",
                                        "value": "${SEMATEXT_BASE_URL}"
                                    }
                                ],
                                "livenessProbe": {
                                    "tcpSocket": {
                                        "port": 8080
                                    },
                                    "initialDelaySeconds": 2,
                                    "timeoutSeconds": 20,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "tcpSocket": {
                                        "port": 8080
                                    },
                                    "initialDelaySeconds": 2,
                                    "timeoutSeconds": 10,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "ssp-backend",
                "annotations": {
                    "haproxy.router.openshift.io/timeout": "5m"
                }
            },
            "spec": {
                "host": "${APP_ROUTE}",
                "to": {
                    "kind": "Service",
                    "name": "ssp-backend",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge",
                    "insecureEdgeTerminationPolicy": "Redirect"
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "ssp-backend",
                "labels": {
                    "app": "ssp-backend"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentconfig": "ssp-backend"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "ssp-backend",
                "labels": {
                    "app": "ssp-backend"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "latest",
                        "from": {
                            "kind": "DockerImage",
                            "name": "${DOCKER_IMAGE}"
                        },
                        "importPolicy": {
                            "scheduled": true
                        }
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "name": "APP_ROUTE",
            "description": "The route that Openshift exposes"
        },
        {
            "name": "DOCKER_IMAGE",
            "description": "The docker image and version (user/image:tag)",
            "value": "oscp/cloud-selfservice-portal-backend:v1.2.4",
            "required": true
        },
        {
            "name": "OPENSHIFT_API",
            "description": "The openshift url",
            "required": true
        },
        {
            "name": "OPENSHIFT_TOKEN",
            "description": "The openshift token",
            "required": true
        },
        {
            "name": "MAX_QUOTA_CPU",
            "description": "How many CPU can a user assign to his project",
            "value": "30",
            "required": true
        },
        {
            "name": "MAX_QUOTA_MEMORY",
            "description": "How many GB memory can a user assign to his project",
            "value": "50",
            "required": true
        },
        {
            "name": "MAX_VOLUME_GB",
            "description": "IP addresses of the gluster endpoints",
            "value": "100",
            "required": true
        },
        {
            "name": "GIN_MODE",
            "description": "Mode of the Webframework",
            "value": "debug",
            "required": true
        },
        {
            "name": "LDAP_URL",
            "description": "Your LDAP url",
            "required": true
        },
        {
            "name": "LDAP_BIND_DN",
            "description": "LDAP Bind",
            "required": true
        },
        {
            "name": "LDAP_BIND_CRED",
            "description": "LDAP Credentials",
            "required": true
        },
        {
            "name": "LDAP_SEARCH_BASE",
            "description": "LDAP Search Base",
            "required": true
        },
        {
            "name": "LDAP_FILTER",
            "description": "LDAP Filter",
            "value": "(uid=%s)",
            "required": true
        },
        {
            "name": "SESSION_KEY",
            "description": "A secret password to encrypt session information",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{40}",
            "required": true
        },
        {
            "name": "GLUSTER_API_URL",
            "description": "The URL of your Gluster-API",
            "required": true
        },
        {
            "name": "GLUSTER_SECRET",
            "description": "The basic auth password you configured on the gluster api",
            "required": true
        },
        {
            "name": "GLUSTER_IPS",
            "description": "IP addresses of the gluster endpoints (comma separated)",
            "required": true
        },
        {
            "name": "DDC_API",
            "description": "URL of the DDC Billing API"
        },
        {
            "name": "AWS_PROD_ACCESS_KEY_ID",
            "description": "AWS Access Key ID to manage AWS ressources for production buckets",
            "required": true
        },
        {
            "name": "AWS_PROD_SECRET_ACCESS_KEY",
            "description": "AWS Secret Access Key to manage AWS ressources for production buckets",
            "required": true
        },
        {
            "name": "AWS_NONPROD_ACCESS_KEY_ID",
            "description": "AWS Access Key ID to manage AWS ressources for development buckets",
            "required": true
        },
        {
            "name": "AWS_NONPROD_SECRET_ACCESS_KEY",
            "description": "AWS Secret Access Key to manage AWS ressources for development buckets",
            "required": true
        },
        {
            "name": "AWS_S3_BUCKET_PREFIX",
            "description": "Prefix for all generated S3 buckets",
            "required": true
        },
        {
            "name": "AWS_REGION",
            "description": "Region for all the aws artifacts",
            "value": "eu-central-1",
            "required": true
        },
        {
            "name": "SEMATEXT_API_TOKEN",
            "description": "Admin token for Sematext Logsene Apps",
            "required": true
        },
        {
            "name": "SEMATEXT_BASE_URL",
            "description": "Base url for Sematext",
            "value": "https://apps.eu.sematext.com/",
            "required": true
        }
    ]
}
